<Window x:Class="DiReCT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiReCT"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel VerticalAlignment="Center">
        <Button x:Name="btnSaveRecord" Content="Save" Width="75" Margin="5" Click="btnSaveRecord_Click"></Button>
        <Button x:Name="button" Content="Close" Width="75" Margin="5" Click="button_Click"/>
    </StackPanel>
</Window>
